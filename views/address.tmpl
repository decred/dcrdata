{{define "address"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Decred Address %s" .Address}}
<body>

    {{template "navbar"}}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h4>Address</h4>
                <p class="mono">{{.Address}}</p>
                <table class="table-centered-1rem">
                    {{if lt .NumFundingTxns .KnownFundingTxns}}
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">Only the {{.NumFundingTxns}} most recent of {{.KnownFundingTxns}} funding transactions are tabulated below.</td>
                        </tr>
                    {{else}}
                        {{if not .KnownFundingTxns)}}
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">The {{.NumFundingTxns}} most recent transactions are tabulated below.</td>
                        </tr>
                        {{end}}
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">TRANSACTIONS</td>
                            <td>{{add .NumFundingTxns .NumSpendingTxns}}</td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">UNCONFIRMED</td>
                            <td>{{.NumUnconfirmed}}</td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">RECEIVED</td>
                            <td>{{.TotalReceived}}</td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">SENT</td>
                            <td>{{.TotalSent}}</td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 h1rem p03rem0">UNSPENT</td>
                            <td>{{.Unspent}}</td>
                        </tr>
                    {{end}}
                </table>
                <h5>Transactions</h5>
                <table class="table table-mono-cells table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th class="text-right">Credit DCR</th>
                        <th>Debit DCR</th>
                        <th>Time</th>
                        <th>Age</th>
                        <th>Confirms</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .Transactions}}
                        <tr>
                            <td><a href="../tx/{{.TxID}}" class="hash">{{.TxID}}</a></td>
                            {{if ne .RecievedTotal 0.0}}
                                <td class="text-right">{{template "decimalParts" (float64AsDecimalParts .RecievedTotal false)}}</td>
                            {{else}}
                                <td></td>
                            {{end}}
                            {{if ne .SentTotal 0.0}}
                                {{if lt 0.0 .SentTotal}}
                                    <td>{{template "decimalParts" (float64AsDecimalParts .SentTotal false)}}</td>
                                {{else}}
                                    <td>N/A</td>
                                {{end}}
                            {{else}}
                                <td></td>
                            {{end}}
                            <td>
                                {{if eq .Time 0}}
                                    Unconfirmed
                                {{else}}
                                    {{.FormattedTime}}
                                {{end}}
                            </td>
                            <td>
                            {{if eq .Time 0}}
                                N/A
                            {{else}}
                                <span data-age="{{.Time}}"></span>
                            {{end}}
                            </td>
                            <td>{{.Confirmations}}</td>
                            <td>{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{template "footer"}}

</body>
</html>
{{end}}
