{{define "address"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head"}}
<body>
{{template "navbar"}}

<div class="wrapper" style="margin-top:60px;">
        <div id="boxagenda">
            <div style="clear:both;">&nbsp;</div>
            <h4><span>Transaction  {{.Address}}</span></h4>
            <p class="bg-info" style="background-color:#2971FF;padding:15px;"> 
                Address: {{.Address}}
            </p>

            <h4><span>Transactions</span></h4>
            {{range .Transactions}}
            <p class="bg-info" style="background-color:#2971FF;padding:15px;"> 
                Transaction ID: <a href="../tx/{{.TxID}}">{{.TxID}}</a> <br>
                Time: {{.Time | getTime }}<br>
                Confirmations: {{.Confirmations}}<br>
                Total Value: {{.Value}}<br>
                Size: {{.Size}}<br>
            </p>
            {{end}}
        </div>
    </div>
</body>
</html>
{{end}}