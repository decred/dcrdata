{{define "address"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Decred Address %s" .Address}}
<body>

    {{template "navbar"}}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h4>Address</h4>
                <p class="mono">{{.Address}}</p>

                {{$Transactions := len .Transactions}}
                {{$Unconfirmed := 0}}
                {{$CurrentBalance := 0}}
                {{range .Transactions}}
                    {{if eq .Time 0}}
                        {{$Unconfirmed +1}}
                    {{end}}
                {{end}}
                <p>Transactions:   {{$Transactions}}</p>
                <p>Current Balance: {{$CurrentBalance}}</p>
                <p>Unconfirmed: {{$Unconfirmed}}</p>
                {{if eq $Transactions 2000}}
                    Currently only the first 2000 transactions are being used.
                {{end}}
                <h5>Transactions</h5>
                <table class="table table-mono-cells table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th class="text-right">Total DCR</th>
                        <th>Time</th>
                        <th>Age</th>
                        <th>Confirmations</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .Transactions}}
                        <tr>
                            <td><a href="../tx/{{.TxID}}" class="hash">{{.TxID}}</a></td>
                            <td class="text-right">{{template "fancyDCR" (fancyDCR .Total)}}</td>
                            <td>
                                {{if eq .Time 0}}
                                    Unconfirmed
                                {{else}}
                                    {{.FormattedTime}}
                                {{end}}
                            </td>
                            <td class="age">{{if eq .Time 0}}
                                N/A
                            {{else}}
                                {{.Time}}
                            {{end}}
                            </td>
                            <td class="hidden timestamp">{{.Time}}</td>
                            <td>{{.Confirmations}}</td>
                            <td>{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{template "footer"}}

</body>
</html>
{{end}}
