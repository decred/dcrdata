{{define "home"}}
<!DOCTYPE html>
<html lang="en">

{{ template "html-head" "Decred Block Explorer by dcrdata.org"}}

<body>
    {{ template "navbar" }}

    <script type="text/javascript">

        var updateMempool = function (event) {
            console.log("Received mempoolsstxfeeinfo message", event);
            var m = JSON.parse(event);

            //mempool fee info
            $('#mempoolfeeinfo_number').text(m.number)
        };
        ws.registerEvtHandler("mempoolsstxfeeinfo", updateMempool);

        var updateBlockData = function (event) {
            console.log("Received newblock message", event);
            var newBlock = JSON.parse(event);
            var confirms = $(".confirmations")
            $.each(confirms, function(i, v) {
                $(v).text(
                    parseInt($(v).text()) + 1
                )
            })
            // block summary data
            var b = newBlock.block;
            var expTableRows = $('#explorertable tbody tr');
            var currentHeight = parseInt($('#explorertable tbody tr td').first().text());
            if (expTableRows && (b.height - currentHeight == 1)){
                expTableRows.last().remove()
                var newRow = '<tr id="' + b.height + '">' +
                    '<td><a href="/explorer/block/' + b.height + '" class="fs18">' + b.height + '</a></td>' +
                    '<td>' + b.tx + '</td>' +
                    '<td>' + b.votes + '</td>' +
                    '<td>' + b.tickets + '</td>' +
                    '<td>' + b.revocations + '</td>' +
                    '<td>' + humanize.bytes(b.size) + '</td>' +
                    '<td data-age=' + b.time + '>' + humanize.timeSince(b.time) + '</td>' +
                    '<td>' + b.formatted_time + '</td>' +
                '</tr>'
                var newRowHtml = $.parseHTML(newRow)
                $(newRowHtml).insertBefore(expTableRows.first())
                setTimeElements()
            }
            if ($("#bsubsidy_total").text() !== "") {
                $("#bsubsidy_total").html(humanize.decimalParts(b.next_block_subsidy.total/100000000, false, 8))
                $("#bsubsidy_pow").html(humanize.decimalParts(b.next_block_subsidy.pow/100000000, false, 8))
                $("#bsubsidy_pos").html(humanize.decimalParts((b.next_block_subsidy.pos/500000000), false, 8))
                $("#bsubsidy_dev").html(humanize.decimalParts(b.next_block_subsidy.developer/100000000, false, 8))
                $("#coin_supply").html(humanize.decimalParts(b.coin_supply/100000000, true, 8))
                $("#blocksdiff").html(humanize.decimalParts(b.sdiff, false, 8))
                $("#window_block_index").text(newBlock.stake.window_block_index)
                $("#pos-window-progess-bar").css({ width: (newBlock.stake.window_block_index/144)*100 + "%" })
            }
        };
        ws.registerEvtHandler("newblock", updateBlockData);
    </script>

    <div class="container">

        <div class="row">

            <div class="col-md-6">

                <h3 class="mt-2">Chain State</h3>

                {{with .Data}}
                <div>
                    <table class="mb-3 col">
                        <tr class="h2rem">
                            <td class="text-right pr-2 p03rem0 w142 lh1rem">TOTAL SUPPLY</td>
                            <td class="fs24 mono lh1rem fs14-decimal">
                                <span id="coin_supply">{{template "decimalParts" (amountAsDecimalParts .BlockSummary.CoinSupply true)}}</span><span class="pl-1 unit">DCR</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem pt-1 pb-1 vam">TICKET PRICE</td>
                            <td class="mono vam fs24 fs14-decimal font-weight-bold"><span id="blocksdiff">{{template "decimalParts" (float64AsDecimalParts .BlockSummary.StakeDiff false)}}</span><span class="pl-1 unit">DCR</span></td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem pt-1 pb-1">TICKETS IN MEMPOOL</td>
                            <td><span id="mempoolfeeinfo_number" class="mono fs24">{{.MempoolFeeInfo.Number}}</span></td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem pt-1 pb-1">TICKET WINDOW PROGRESS</td>
                            <td>
                                <div class="row">
                                    <div class="col-11 col-lg-8">
                                        <div class="progress" style="max-width: 330px">
                                            <div
                                                class="progress-bar"
                                                id="pos-window-progess-bar"
                                                role="progressbar"
                                                style="width: {{ticketWindowProgress .StakeSummary.IdxBlockInWindow}}%; background: #2ed8a3;"
                                                aria-valuenow="{{.StakeSummary.IdxBlockInWindow}}"
                                                aria-valuemin="0"
                                                aria-valuemax="144"
                                            >
                                            <span id="blocksdiff" style="color:#383b41" class="nowrap pl-1">block <span id="window_block_index" >{{.StakeSummary.IdxBlockInWindow}}</span> of 144</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem pt-1 pb-1">PROOF OF WORK DIFFICULTY</td>
                            <td class="mono lh1rem p03rem0">
                                <span id="difficulty" class="fs24 fs14-decimal">
                                    {{template "decimalParts" (float64AsDecimalParts (index $.InitialData 1).Difficulty true)}}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem pt-1">BLOCK REWARD</td>
                            <td>
                                <div class="mono lh1rem p03rem0 fs14-decimal fs24">
                                    <span id="bsubsidy_total">{{template "decimalParts" (amountAsDecimalParts .BlockSummary.NextBlockSubsidy.Total true)}}</span><span class="unit"> DCR</span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem">POW REWARD</td>
                            <td>
                                <div class="mono lh1rem fs14-decimal fs18"><span id="bsubsidy_pow">{{template "decimalParts" (amountAsDecimalParts .BlockSummary.NextBlockSubsidy.PoW true)}}</span><span class="unit"> DCR</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem">POS REWARD</td>
                            <td>
                                <div class="mono lh1rem fs14-decimal fs18"><span id="bsubsidy_pos">{{template "decimalParts" (amountAsDecimalParts ( divide .BlockSummary.NextBlockSubsidy.PoS 5) true)}}</span><span class="unit"> DCR</span><span class="fs14"> / ticket</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right pr-2 lh1rem">DEV REWARD</td>
                            <td>
                                <div class="mono lh1rem fs14-decimal fs18"><span id="bsubsidy_dev">{{template "decimalParts" (amountAsDecimalParts .BlockSummary.NextBlockSubsidy.Developer true)}}</span><span class="unit"> DCR</span>
                            </td>
                        </tr>
                    </table>
                </div>
                {{end}}

            </div>

            <div class="col-md-6">

                <h4 class="mb-3">Latest Blocks</h4>
                <table class="table striped table-responsive full-width" id="explorertable">
                    <thead>
                        <tr>
                            <th>Height</th>
                            <th>
                                <span class="d-none d-lg-inline">Transactions</span>
                                <span class="d-lg-none">Txn</span>
                            </th>
                            <th>Vote<span class="d-none d-lg-inline">s</span></th>
                            <th>Ticket<span class="d-none d-lg-inline">s</span></th>
                            <th>
                                <span class="d-none d-lg-inline">Revocations</span>
                                <span class="d-lg-none">Revoke</span>
                            </th>
                            <th>Size</th>
                            <th>Age</th>
                            <th>Time ({{timezone}})</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{range .InitialData}}
                        <tr id="{{.Height}}">
                            <td><a href="/explorer/block/{{.Height}}" class="fs18">{{.Height}}</a></td>
                            <td>{{len .Tx}}</td>
                            <td>{{.Voters}}</td>
                            <td>{{.FreshStake}}</td>
                            <td>{{.Revocations}}</td>
                            <td>{{formatBytes .Size}}</td>
                            <td data-age="{{.Time}}"></td>
                            <td>{{getTime .Time}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
                <div class="mb-3"><a href="/explorer"><small>More blocks...</small></a></div>

            </div>

        </div>

    </div>

    <!-- end wrapper -->

    {{ template "footer"}}

</body>
</html>
{{end}}