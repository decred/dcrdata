    }

    function clearTargets() {
        $(".keynav-target").each((i,el) => {
            $(el).removeClass("keynav-target").removeClass("pulsate")
        })
    }

    function enableKeyNav() {
        setCookie(keyNavCookieName, 1, 525600)
